#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#define MAX 5

int stack[MAX];
int top = -1;

void push(int x) {
    stack[++top] = x;
}

int pop() {
    return stack[top--];
}

void view() {
    int i;
    if(top < 0) {
        printf("\nStack Empty\n");
    } else {
        printf("\nTop-->");
        for(i = top; i >= 0; i--) {
            printf("%4d", stack[i]);
        }
        printf("\n");
    }
}

void main() {
    int ch, val;
    clrscr();
    
    do {
        clrscr();
        printf("\nSTACK OPERATIONS\n");
        printf("1. PUSH\n");
        printf("2. POP\n");
        printf("3. VIEW\n");
        printf("4. EXIT\n");
        printf("Enter your choice: ");
        scanf("%d", &ch);
        
        switch(ch) {
            case 1:
                if(top < MAX-1) {
                    printf("\nEnter element to push: ");
                    scanf("%d", &val);
                    push(val);
                    printf("\n%d pushed to stack", val);
                } else {
                    printf("\nStack Overflow!");
                }
                break;
                
            case 2:
                if(top < 0) {
                    printf("\nStack Underflow!");
                } else {
                    val = pop();
                    printf("\n%d popped from stack", val);
                }
                break;
                
            case 3:
                view();
                break;
                
            case 4:
                exit(0);
                
            default:
                printf("\nInvalid choice!");
        }
	printf("\nPress any key to continue...");
        getch();
    } while(ch != 4);
}
