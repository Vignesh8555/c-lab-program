#include <stdio.h>
#include <conio.h>  
#define SIZE 100

int queue[SIZE];
int front = -1, rear = -1;

void insert(int value) {
    if (rear == SIZE - 1) {
        printf("Queue is full!\n");
    } else {
        if (front == -1) {
            front = 0;
        }
        queue[++rear] = value;
        printf("%d inserted into queue.\n", value);
    }
}

void delete() {
    if (front == -1 || front > rear) {
        printf("Queue is empty!\n");
    } else {
        printf("%d deleted from queue.\n", queue[front++]);
        if (front > rear) {
            front = rear = -1;
        }
    }
}

void display() {
    int i;
    if (front == -1) {
        printf("Queue is empty!\n");
    } else {
        printf("Queue elements: ");
        for (i = front; i <= rear; i++) {
            printf("%d ", queue[i]);
        }
        printf("\n");
    }
}

void main() { 
    int choice;
    int value;
    clrscr(); 

    while (1) {
        printf("\nQueue Operations:\n");
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter the value to insert: ");
                scanf("%d", &value);
                insert(value);
                break;
            case 2:
                delete();
                break;
            case 3:
                display();
                break;
            case 4:
                printf("Exiting program.\n");
                getch();  
                exit(0);
            default:
                printf("Invalid choice! Press any key to continue...\n");
                getch();
        }
    }
}
